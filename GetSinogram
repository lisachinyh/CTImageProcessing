%clear everything
clear
clc

ellipse = imread('ellipse.bmp'); %this is what the image file was named --> change this according to your image

% num=no of CT projections, rota=rotation angle
num = 720; 
rota = 180/num; 
theta = 0:rota:180-rota;
[R,xp] = radon (ellipse, theta);

%display sinogram
RR = flipud (R');
imshow(RR,[]);
